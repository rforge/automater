#! /bin/sh

version="RoboTest configure 0.1"
usage="Usage: configure [--help | --version] ~/RVERSION/R-2.14.1"

if [ $# -ne 1 ]; then 
    echo "${usage}"; exit 1 
fi

export RVERSION=${1} 
 
case ${RVERSION} in
  -h|--help)
    echo "${usage}"; exit 0 ;;
  -v|--version)
    echo "${version}"; exit 0 ;;
  *)   break ;;
esac


if [ ! -f ${RVERSION}/bin/R ] ; then 
   echo " ${RVERSION}/bin/R does not exists. 
          Need full path to R version as argument." ; exit 1;fi

echo           "creating       Makevars ..."
echo ROBOHOME=`pwd`/          >Makevars
echo RVERSION=${RVERSION}/   >>Makevars
echo "include \${ROBOHOME}/Makevars.in" >>Makevars
