
include ../../Makevars

TESTS=${wildcard *.[rR] }

tests: testsite testfresh

.NOTPARALLEL: $(TESTS:%=%out) $(TESTS:%=%outfresh) # only for db conflicts

testsite: $(TESTS:%=%out)

$(TESTS:%=%out):%out:%   $(RPATH)/site-library
	@$(RM) $@ 
	$(RLIBS)  $(RB)  $< $@.fail
	@if [ -f $@.save ]; then  $(Rdiff) $@.save  $@.fail 1 ; fi
	@mv $@.fail $@


testfresh: $(TESTS:%=%outfresh)

$(TESTS:%=%outfresh):%outfresh: %   
	@$(RM) $@ 
	$(RLIBSFRESH)  $(RB)  $< $@.fail
	@if [ -f $@.save ]; then  $(Rdiff) $@.save  $@.fail 1 ; fi
	@mv $@.fail $@

clean:
	$(RM) *.Rout *.Routfresh Rplots.pdf *.fail
